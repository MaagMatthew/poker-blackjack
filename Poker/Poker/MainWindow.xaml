<Window x:Class="Poker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poker"
        mc:Ignorable="d"
        Title="Card Games" Height="450" Width="800">
    <Canvas Background="DarkGreen">
        <TextBlock Canvas.Left="200" Canvas.Top="25" Height="100" Width="400" Text="Heccin Card Games" TextAlignment="Center" Foreground="White" FontFamily="Harlow Solid" FontSize="45"/>
        <Button Height="40" Width="200" Canvas.Bottom="200" Canvas.Left="275" Content="Poker" Background="DarkGoldenrod"  FontFamily="Harlow Solid" FontSize="25" BorderBrush="Black" BorderThickness="3" Click="Poker_Click"/>
        <Button Height="40" Width="200" Canvas.Bottom="150" Canvas.Left="275" Content="Black Jack" Background="Black"  FontFamily="Harlow Solid" FontSize="25" Foreground="DarkGoldenrod" BorderBrush="DarkGoldenrod" BorderThickness="3" Click="BlackJack_Click"/>
    </Canvas>
</Window>
